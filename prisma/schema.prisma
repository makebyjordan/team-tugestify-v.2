generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  role      String
  avatar    String
  password  String?  // For mock auth
  isAdmin   Boolean  @default(false) // Admin-root flag
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Asset {
  id         String   @id @default(uuid())
  name       String
  category   String
  url        String
  uploadedBy String
  date       String   // Keeping as string to match frontend, or could migrate to DateTime
  size       String?
  tags       String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model BrandItem {
  id        String   @id @default(uuid())
  type      String
  content   String
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String         @id @default(uuid())
  title       String
  description String
  createdAt   String         // Keeping as string to match frontend
  isArchived  Boolean        @default(false)
  stages      ProjectStage[]
  notes       String[]
  updatedAt   DateTime       @updatedAt
}

model ProjectStage {
  id          String   @id @default(uuid())
  title       String
  isCompleted Boolean  @default(false)
  completedBy String?
  completedAt String?
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id        String   @id @default(uuid())
  action    String
  user      String
  time      String
  createdAt DateTime @default(now())
}

model ChatMessage {
  id        String   @id @default(uuid())
  userId    String
  content   String
  timestamp String
  context   Json?    // Storing context as JSON
  createdAt DateTime @default(now())
}
